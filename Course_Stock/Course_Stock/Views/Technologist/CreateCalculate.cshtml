@model Course_Stock.Models.DataCalculate

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <h3> Введите предпологаемое число изготавлеваемых продуктов </h3>
            <div class="col-md-10">
                @Html.EditorFor(model => model.valueBox, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.valueBox, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Подсчитать" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div>
    <input type="button" class="btn btn-primary" value="Обратно" onclick="location.href='@Url.Action("ViewProduct", new { id = @ViewBag.id })'" />
</div>
